<%- include('../_layouts/adminheader') %>


<div class="container">
  <h2 class="page-title">Edit Page</h2>
  <a href="/admin/pages" class="btn btn-primary">Back to all Pages</a>
  <form method="post" action="/admin/pages/edit-page/<%=id%>">
    <div class="form-group">
      <label for="">Title</label>
      <input type="text" class="form-control" placeholder="Title" value="<%=title%>" name="title">
    </div>
    <div class="form-group">
      <label for="">Slug</label>
      <input type="text" class="form-control" placeholder="Slug" value="<%=slug%>" name="slug">
    </div>
    <div class="form-group">
      <label for="">Content</label>
      <textarea cols="30" rows="10" class="form-control" placeholder="Content" name="content">
        <%=content%>
      </textarea>
    </div>
    <button class="btn btn-primary">Edit Page</button>
  </form>
</div>


<%- include('../_layouts/adminfooter') %>
